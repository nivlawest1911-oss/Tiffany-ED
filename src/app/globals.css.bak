@import "tailwindcss";
/* Rebuild Trigger 2 - Final Fix */

@theme {
  --radius-sm: calc(var(--radius) - 4px);
  --radius-md: calc(var(--radius) - 2px);
  --radius-lg: var(--radius);
  --radius-xl: calc(var(--radius) + 4px);
  --radius-2xl: calc(var(--radius) + 8px);
  --radius-3xl: calc(var(--radius) + 12px);
  --radius-4xl: calc(var(--radius) + 16px);

  --color-noble-gold: #d4af37;
  --color-kente-red: #c41e3a;
  --color-kente-green: #10b981;
  --color-kente-yellow: #d4af37;
  --color-royal-purple: #6b46c1;
}


:root {
  /* ðŸŒŒ QUANTUM STUDIO PALETTE */
  /* Midnight Navy - Primary Background */
  --quantum-navy: #020617;
  /* Cyan - Primary Accent and Data */
  --quantum-cyan: #06b6d4;
  /* Indigo - Secondary Accent and Depth */
  --quantum-indigo: #6366f1;

  /* Text Colors */
  --quantum-text-white: #ffffff;
  --quantum-text-slate: #94a3b8;

  /* Legacy / Compatibility Variables mapped to new system where possible */
  --background: oklch(0.02 0.01 240);
  /* ~#020617 */
  --foreground: oklch(0.985 0 0);
  /* White */

  --primary: oklch(0.6 0.2 260);
  /* Indigo-ish */
  --primary-foreground: oklch(0.985 0 0);

  --secondary: oklch(0.7 0.15 200);
  /* Cyan-ish */
  --secondary-foreground: oklch(0.02 0.01 240);

  --card: oklch(0.03 0.01 240);
  --card-foreground: oklch(0.985 0 0);

  --popover: oklch(0.03 0.01 240);
  --popover-foreground: oklch(0.985 0 0);

  --muted: oklch(0.2 0.02 240);
  --muted-foreground: oklch(0.55 0 0);

  --accent: oklch(0.2 0.02 240);
  --accent-foreground: oklch(0.985 0 0);

  --destructive: oklch(0.5 0.2 25);
  --destructive-foreground: oklch(0.985 0 0);

  --border: oklch(0.2 0.02 240);
  --input: oklch(0.2 0.02 240);
  --ring: oklch(0.6 0.2 260);

  --radius: 1rem;
  /* More rounded for glassmorphism */

  /* Legacy Images - Kept for compatibility but should be replaced by CSS Gradients */
  --hero-bg: none;
  --pattern-bg: none;
  --social-banner: none;
  --business-bg: none;
}

body {
  background-color: #0a0a0f;
  color: white;
}

/* African American Aesthetic Enhancements */
.kente-pattern {
  background: linear-gradient(45deg,
      var(--kente-gold) 0%,
      var(--kente-red) 25%,
      var(--kente-green) 50%,
      var(--royal-purple) 75%,
      var(--kente-gold) 100%);
  background-size: 400% 400%;
  animation: kente-flow 15s ease infinite;
}

@keyframes kente-flow {

  0%,
  100% {
    background-position: 0% 50%;
  }

  50% {
    background-position: 100% 50%;
  }
}

.heritage-glow {
  box-shadow:
    0 0 20px rgba(212, 175, 55, 0.3),
    0 0 40px rgba(212, 175, 55, 0.2),
    0 0 60px rgba(212, 175, 55, 0.1);
}

.royal-gradient {
  background: linear-gradient(135deg,
      #6b46c1 0%,
      #d4af37 50%,
      #cd7f32 100%);
}

.fluid-background {
  background: radial-gradient(ellipse at top left, rgba(212, 175, 55, 0.15) 0%, transparent 50%),
    radial-gradient(ellipse at bottom right, rgba(107, 70, 193, 0.15) 0%, transparent 50%),
    radial-gradient(ellipse at center, rgba(16, 185, 129, 0.1) 0%, transparent 50%);
  animation: fluid-move 20s ease-in-out infinite;
}

@keyframes fluid-move {

  0%,
  100% {
    background-position: 0% 0%, 100% 100%, 50% 50%;
  }

  50% {
    background-position: 100% 100%, 0% 0%, 50% 50%;
  }
}

.glass-card {
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
}

.glass-card-emerald {
  background: rgba(16, 185, 129, 0.05);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(16, 185, 129, 0.2);
  box-shadow: 0 8px 32px 0 rgba(16, 185, 129, 0.2);
}

.glass-card-gold {
  background: rgba(212, 175, 55, 0.05);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(212, 175, 55, 0.3);
  box-shadow: 0 8px 32px 0 rgba(212, 175, 55, 0.2);
}

.gradient-text {
  background: linear-gradient(135deg, #00d2ff 0%, #10b981 50%, #d4af37 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.pulse-glow {
  animation: pulse-glow 2s ease-in-out infinite;
}

@keyframes pulse-glow {

  0%,
  100% {
    opacity: 1;
    transform: scale(1);
  }

  50% {
    opacity: 0.8;
    transform: scale(1.05);
  }
}

.holographic {
  background: linear-gradient(45deg,
      rgba(0, 210, 255, 0.1) 0%,
      rgba(16, 185, 129, 0.1) 25%,
      rgba(212, 175, 55, 0.1) 50%,
      rgba(107, 70, 193, 0.1) 75%,
      rgba(0, 210, 255, 0.1) 100%);
  background-size: 400% 400%;
  animation: holographic-shift 10s ease infinite;
}

@keyframes holographic-shift {

  0%,
  100% {
    background-position: 0% 50%;
  }

  50% {
    background-position: 100% 50%;
  }
}

.scan-line {
  background: linear-gradient(to bottom,
      transparent 0%,
      rgba(0, 210, 255, 0.1) 50%,
      transparent 100%);
  background-size: 100% 200%;
  animation: scan 3s linear infinite;
}

@keyframes scan {
  0% {
    background-position: 0% 0%;
  }

  100% {
    background-position: 0% 100%;
  }
}

.grid-pattern {
  background-image:
    linear-gradient(rgba(0, 210, 255, 0.05) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0, 210, 255, 0.05) 1px, transparent 1px);
  background-size: 50px 50px;
}

.float-animation {
  animation: float 3s ease-in-out infinite;
}

@keyframes float {

  0%,
  100% {
    transform: translateY(0px);
  }

  50% {
    transform: translateY(-10px);
  }
}

.animate-fadeIn {
  animation: fadeIn 0.5s ease-out forwards;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.touch-target {
  min-width: 44px;
  min-height: 44px;
}



@layer base {
  * {
    border-color: hsl(var(--border));
  }

  body {
    background-color: #0a0a0f;
    color: white;
  }
}

html {
  scroll-behavior: smooth;
}

::selection {
  background-color: rgba(212, 175, 55, 0.3);
  /* Gold selection */
  color: white;
}

/* Hide scrollbar for Chrome, Safari and Opera */
.scrollbar-hide::-webkit-scrollbar {
  display: none;
}

/* Hide scrollbar for IE, Edge and Firefox */
.scrollbar-hide {
  -ms-overflow-style: none;
  /* IE and Edge */
  scrollbar-width: none;
  /* Firefox */
}

/* Kente Aesthetic */
.kente-accent {
  border-bottom: 4px solid #FFD700;
  border-image: linear-gradient(to right, #FFD700, #008000, #ff0000) 1;
}

.glass-card-premium {
  background: linear-gradient(145deg, rgba(20, 20, 25, 0.9) 0%, rgba(10, 10, 15, 0.95) 100%);
  backdrop-filter: blur(40px);
  border: 1px solid rgba(255, 255, 255, 0.08);
  box-shadow:
    0 20px 50px -12px rgba(0, 0, 0, 0.7),
    0 0 1px 0 rgba(255, 255, 255, 0.2) inset;
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%);
  }

  100% {
    transform: translateX(100%);
  }
}

.animate-pulse-slow {
  animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

@keyframes marquee {
  0% {
    transform: translateX(0);
  }

  100% {
    transform: translateX(-50%);
  }
}

@keyframes spin-reverse {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(-360deg);
  }
}

.animate-marquee {
  animation: marquee 20s linear infinite;
}

.animate-spin-reverse {
  animation: spin-reverse 3s linear infinite;
}

/* Film Grain Animation */
@keyframes grain {

  0%,
  100% {
    transform: translate(0, 0);
  }

  10% {
    transform: translate(-5%, -10%);
  }

  20% {
    transform: translate(-15%, 5%);
  }

  30% {
    transform: translate(7%, -25%);
  }

  40% {
    transform: translate(-5%, 25%);
  }

  50% {
    transform: translate(-15%, 10%);
  }

  60% {
    transform: translate(15%, 0%);
  }

  70% {
    transform: translate(0%, 15%);
  }

  80% {
    transform: translate(3%, 35%);
  }

  90% {
    transform: translate(-10%, 10%);
  }
}

.animate-grain {
  animation: grain 8s steps(10) infinite;
}

.animate-spin-slow {
  animation: spin 8s linear infinite;
}

.animate-reverse-spin {
  animation: spin-reverse 6s linear infinite;
}

/* Liquid Glow and Antigravity Styles */
@keyframes liquid-flow {
  0% {
    transform: translate(0, 0) scale(1);
  }

  33% {
    transform: translate(30px, -50px) scale(1.1);
  }

  66% {
    transform: translate(-20px, 20px) scale(0.9);
  }

  100% {
    transform: translate(0, 0) scale(1);
  }
}

.wellness-glow-container {
  position: fixed;
  inset: 0;
  z-index: -1;
  overflow: hidden;
  background: #050505;
  /* Deep Obsidian base */
  transition: opacity 1s ease-in-out;
}

.blob {
  position: absolute;
  width: 500px;
  height: 500px;
  border-radius: 50%;
  filter: blur(80px);
  opacity: 0.4;
  mix-blend-mode: screen;
}

.blob-emerald {
  background: radial-gradient(circle, #10b981, transparent 70%);
  top: -10%;
  left: -10%;
  animation: liquid-flow 15s infinite alternate ease-in-out;
}

.blob-gold {
  background: radial-gradient(circle, #fbbf24, transparent 70%);
  bottom: -10%;
  right: -10%;
  animation: liquid-flow 20s infinite alternate-reverse ease-in-out;
}

/* Custom Scrollbar for Agents/Token lists */
.custom-scrollbar::-webkit-scrollbar {
  width: 6px;
}

.custom-scrollbar::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.02);
}

.custom-scrollbar::-webkit-scrollbar-thumb {
  background: rgba(99, 102, 241, 0.3);
  border-radius: 10px;
}

.custom-scrollbar::-webkit-scrollbar-thumb:hover {
  background: rgba(6, 182, 212, 0.5);
}